<section class="pagination">
    <% if (currentPage !==1) { %>
        <a href="?page=1">1</a>
        <% } %>

        <% if (hasPreviousPage && previousPage !==1 && previousPage !==2) { %>
            <span> ... </span>
            <% } %>

            <% if (hasPreviousPage && lastPage > 3) { %>
                <span> ... </span>
                <a href="?page=<%= previousPage %>">
                    <%= previousPage %>
                </a>
                <% } %>

                    <a href="?page=<%= currentPage %>" class="active">
                        <%= currentPage %>
                    </a>

                    <% if (hasNextPage && nextPage !==lastPage) { %>
                        <a href="?page=<%= nextPage %>">
                            <%= nextPage %>
                        </a>
                        <% } %>

                        <% if (hasNextPage && nextPage !==lastPage && lastPage > 3) { %>
                            <span> ... </span>
                            <% } %>

                            <% if (lastPage !==currentPage) { %>
                                <a href="?page=<%= lastPage %>">
                                    <%= lastPage %>
                                </a>
                                <% } %>
</section>