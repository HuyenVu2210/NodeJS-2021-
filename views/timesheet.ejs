<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main class="centered">
        <h1><%= staff.name %></h1>
        <hr>
        <div class="image">
            <img src="<%= staff.image %>" alt="<%= staff.name %>">
        </div>
        <ul>
            <% timesheet.forEach(t => { %>
                <li>
                    <p><%= t._id %></p> 
                    <p><%= t.totalHours %></p> 
                </li>
            <% }) %>
        </ul>
        <a href="/edit-staff">Edit</a>
    </main>

<%- include('./includes/end.ejs') %>